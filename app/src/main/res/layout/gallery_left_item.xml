<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:id="@+id/gallery_image_view_left"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY">
        </com.facebook.drawee.view.SimpleDraweeView>

        <ys.catcard.view.AnimatedCheckBox
            android:id="@+id/gallery_image_view_left_checkbox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/gallery_image_view_left"
            android:layout_alignRight="@+id/gallery_image_view_left" />
    </RelativeLayout>


    <LinearLayout
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/gallery_image_view_right1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY" />

            <ys.catcard.view.AnimatedCheckBox
                android:id="@+id/gallery_image_view_right1_checkbox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/gallery_image_view_right1"
                android:layout_alignRight="@+id/gallery_image_view_right1" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_marginRight="1dp"
                android:id="@+id/gallery_image_view_right2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY" />

            <ys.catcard.view.AnimatedCheckBox
                android:id="@+id/gallery_image_view_right2_checkbox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/gallery_image_view_right2"
                android:layout_alignRight="@+id/gallery_image_view_right2" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>